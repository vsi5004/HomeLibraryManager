                  </TextField>
                  <TextField fx:id="TF_Version" maxWidth="-Infinity" prefHeight="25.0" prefWidth="220.0" promptText="Version" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="TF_Edition" maxWidth="-Infinity" prefHeight="25.0" prefWidth="220.0" promptText="Edition" VBox.vgrow="NEVER">
